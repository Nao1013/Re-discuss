<div class="container text-center mt-3">
  <h3 class="text-primary">悩み事</h3>
  
  <%= form_with model: @gender, url: genders_path do |form| %>
    <div class="field">
      <%= form.label :title %><br>
      <%= form.text_field :title, size: "70" %>
    </div>
  
    <div class="field">
      <%= form.label :body %><br>
      <%= form.text_area :body, size: "70x30" %>
    </div>
    
    <p class="mt-3">
      <%= form.label :genre, 'ジャンル' %>
      <%= form.collection_select :genre_ids, Genre.all, :id, :name %> 
    </p>
  
    <div class="actions">
      <%= form.submit "投稿する", class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
  
  <%= link_to "一覧", genders_path %>
</div>
