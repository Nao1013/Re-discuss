<div class="container text-center">
  <h3 class="mt-3"><%= @gender.title %></h3><br>
  <div class="card mx-auto col-sm-8 shadow">
    <div class="card-body text-left">
      <%= @gender.body %>
      <span>【ジャンル】</span>
      <% @gender.genres.each do |genre| %>
        <%= genre.name %>
      <% end %>
      <div class="text-right">
        <%= link_to "編集", edit_gender_path, class: "btn btn-sm btn-success" %>
        <%= link_to "削除", gender_path, class: "btn btn-sm btn-danger" %>
      </div>
      
    </div>
    
  </div>
  <%= link_to user_path(@user) do %>
    <p class="text-right col-sm-10"><%= @user.user_name %></p>
  <% end %>
</div>
