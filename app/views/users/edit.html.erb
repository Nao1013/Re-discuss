<div class="container text-center mt-3">
  <%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :user_name, autofocus: true, id:"inputUserName", placeholder:"名前"%><br>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  
  <%= f.label :自己紹介 %>
  <%= f.text_area :introduct, placeholder: "性自認や悩み事など" %><br>
  <%= f.submit "変更を保存" %>
<% end %>
</div>