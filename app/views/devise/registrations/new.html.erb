<div class="container col-sm-6 mt-3">
  <h2 class="text-">サインイン</h2>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザー名, class: "col-sm-3" %>
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス, class: "col-sm-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード", class: "col-sm-3" %>
      <%= f.password_field :password, autocomplete: "off",placeholder: "6文字以上の英数字", class: "col-lg-4" %>
    </div>

    <div class="row form-group">
      <%= f.label :"パスワード(確認用)", class: "col-sm-3 mr-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "確認用", class: "col-lg-4" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "サインイン", class: "btn btn-success mt-3" %><br>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

