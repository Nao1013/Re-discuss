<div class="container mt-3 text-center">
  <h2>プロフィール編集 <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :ユーザー名, class: "col-sm-3" %>
      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス, class: "col-sm-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード", class: "col-sm-3" %>
      <%= f.password_field :password, autocomplete: "off",placeholder: "6文字以上の英数字", class: "col-lg-4" %>
    </div>

    <div class="row form-group">
      <%= f.label :"パスワード(確認用)", class: "col-sm-3 mr-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "確認用", class: "col-lg-4" %>
    </div>
  
    <div class="actions">
      <%= f.submit "編集", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <h3>Cancel my account</h3>
  
  <div>退会する？ <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "データは全て失われます。本当に退会しますか？", turbo_confirm: "本当にしますか？" }, method: :delete %></div>
  
  <%= link_to "Back", :back %>
</div>

